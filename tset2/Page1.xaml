<Page x:Class="tset2.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tset2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Height="30" Width="150" Name="l"/>
        <TextBox Height="30" Grid.Row="1" Width="150" Name="p"/>
        <CheckBox Grid.Row="2" Name="save">Запомнить меня</CheckBox>
        <Button Grid.Row="3" Width="200" Height="50" Click="Button_Click">Войти</Button>
    </Grid>
</Page>
